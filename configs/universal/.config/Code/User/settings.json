{
    "window.zoomLevel": 1,
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 140,
    "workbench.startupEditor": "none",
    "workbench.iconTheme": "vscode-great-icons",
    "workbench.colorTheme": "Catppuccin Mocha",
    "editor.fontFamily": "Iosevka Nerd Font",
    "editor.fontLigatures": true,
    "editor.fontWeight": 600,
    "editor.fontSize": 14,
    "editor.rulers": [90, 140],
    "editor.smoothScrolling": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "checkpatch.checkpatchArgs": [
        "--max-line-length=90",
        "--no-tree",
        "--strict",
        "--ignore",
        "SPDX_LICENSE_TAG,CONCATENATED_STRING,PREFER_KERNEL_TYPES,SPLIT_STRING,SSCANF_TO_KSTRTO,FSF_MAILING_ADDRESS,STRCPY,OPEN_ENDED_LINE,VOLATILE,CAMELCASE,BLOCK_COMMENT_STYLE,QUOTED_WHITESPACE_BEFORE_NEWLINE,PREFER_DEFINED_ATTRIBUTE_MACRO"
    ],
    "todohighlight.isEnable": true,
    "todohighlight.include": [
        "*.c",
        "*.h",
        "*.py",
        "*.lua",
        "Makefile",
        "Makefile.*"
    ],
    "todohighlight.keywords": [
        {
            "text": "TODO",
            "color": "#24273a",
            "backgroundColor": "#eed49f",
            "overviewRulerColor": "rgba(238,212,159,0.8)"
        },
        {
            "text": "FIXME",
            "color": "#24273a",
            "backgroundColor": "#8aadf4",
            "overviewRulerColor": "rgba(138,173,244,0.8)"
        },
        {
            "text": "NOTE",
            "color": "#24273a",
            "backgroundColor": "#a6da95",
            "overviewRulerColor": "rgba(166,218,149,0.8)"
        },
        {
            "text": "REVIEW",
            "color": "#24273a",
            "backgroundColor": "#cba6f7",
            "overviewRulerColor": "rgba(203,166,247,0.8)"
        }
    ]
}
