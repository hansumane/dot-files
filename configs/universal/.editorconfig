root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
tab_width = 8

[*.{lua,xml,html,build,sh*,zsh*,bash*,yang*}]
indent_style = space
indent_size = 2
tab_width = 8

[{configure.ac,Makefile,Makefile.*,*.{s,vim*,git*}}]
indent_style = tab
indent_size = 8
tab_width = 8
