root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
tab_width = 4

[*.{xml,html,yang*,sh*,zsh*,bash*}]
indent_style = space
indent_size = 2
tab_width = 2

[{Makefile{,.*},*.{s,vim*,git*}}]
indent_style = tab
indent_size = 8
tab_width = 8

[*.{c,h}]
indent_style = space
indent_size = 2
tab_width = 8
