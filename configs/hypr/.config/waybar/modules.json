{
    "hyprland/workspaces": {
        "format": "{}",
        "format-icons": {},
        "on-click": "activate",
        "sort-by-number": true,
        "active-only": true
    },
    "hyprland/window": {
        "max-length": 128,
        "separate-outputs": true
    },
    "clock": {
        "format-alt": "{:%a, %d %b (%m) %Y}"
    },
    "pulseaudio": {
        "format": "<span foreground='#f5e0dc'>{icon}</span> {volume}% <span foreground='#1e1e2e'>|</span> ",
        "format-bluetooth": "<span foreground='#f5e0dc'>{icon} </span> {volume}% <span foreground='#1e1e2e'>|</span> ",
        "format-muted": "<span foreground='#f5e0dc'>MUT</span> <span foreground='#1e1e2e'>|</span> ",
        "format-icons": {
            "headphone": "",
            "default": ["", "", ""]
        },
        "scroll-step": 1,
        "on-click": "pavucontrol"
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "<span foreground='#f5e0dc'>{icon}</span>  {percent}% <span foreground='#1e1e2e'>|</span> ",
        "format-icons": ["󰃞", "󰃟", "󰃠"],
        "tooltip-format": "Brightness"
    },
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "<span foreground='#f5e0dc'>{icon}</span>{capacity}% <span foreground='#1e1e2e'>|</span> ",
        "format-charging": "<span foreground='#f5e0dc'></span> {capacity}% <span foreground='#1e1e2e'>|</span> ",
        "format-plugged": "<span foreground='#f5e0dc'></span> {capacity}% <span foreground='#1e1e2e'>|</span> ",
        "format-alt": "<span foreground='#f5e0dc'>{icon}</span> {time} <span foreground='#1e1e2e'>|</span> ",
        "format-icons": [" ", " ", " ", " ", " "]
    },
    "network": {
        "format": "{ifname}",
        "format-wifi": "<span foreground='#f5e0dc'></span>  {signalStrength}%",
        "format-ethernet": "<span foreground='#f5e0dc'></span>  ether",
        "format-disconnected": "",
        "tooltip-format": "  {ifname} via {gwaddri}",
        "tooltip-format-wifi": "  {essid} ({signalStrength}%)",
        "tooltip-format-ethernet": "  {ifname} ({ipaddr}/{cidr})",
        "tooltip-format-disconnected": "Disconnected",
        "on-click": "nm-connection-editor",
        "max-length": 64
    },
    "hyprland/language": {
        "format": "<span foreground='#f5e0dc'>󰌌</span>  {}",
        "format-en": "US",
        "format-ru": "RU"
    },
    "tray": {
        "spacing": 10
    },
    "cpu": {
        "format": "<span foreground='#f5e0dc'></span>  {usage}% <span foreground='#1e1e2e'>|</span> ",
        "on-click": "alacritty -e btop"
    },
    "memory": {
        "format": "{}%",
        "on-click": "alacritty -e btop"
    },
    "custom/wlogout": {
        "format": " ",
        "on-click": "wlogout",
        "tooltip": false
    }
}
